{% block title %}List all departments{% endblock %}
{% extends "base.html.twig" %}

{% block body %}
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Id Departement</th>
        <th scope="col">Nom</th>
        <th scope="col">Domaine</th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {% for department in departments %} 
        <tr>
            <th scope="row">{{department.id}}</th>
            <td>{{department.name}}</td>
            <td>{{department.domaine}}</td>
          
            <td><a href="{{path('department_update', {'departmentId': department.id})}}">Modifier</a></td>
            <td><a href="{{path('department_computer_add', {'departmentId': department.id, 'departementName': department.domaine})}}">Ajouter un Computer</a></td>
          </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}